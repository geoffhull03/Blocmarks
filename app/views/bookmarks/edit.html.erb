<h2>Edit Bookmark</h2>

 <div class="row">
   <div class="col-md-8">
     <%= form_for [@topic, @bookmark] do |f| %>
       <div class="form-group">
         <%= f.text_field :url, class: 'form-control', placeholder: "Enter URL Address" %>
       </div>
       <div class="form-group">
         <%= f.submit "Save", class: 'btn btn-success' %>
       </div>
     <% end %>
   </div>
 </div>
